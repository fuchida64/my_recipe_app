
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
       <th>手順</th>
       <th>写真</th>
       <th></th>
    </tr>
    <%= f.nested_fields_for :recipe_procedures, wrapper_tag: :tr do |procedure| %>
      <td><%= procedure.text_field   :instruction,     class: 'form-control' %></td>
      <td><%= procedure.file_field   :image,     class: 'form-control' %></td>
      <td><%= procedure.remove_nested_fields_link '×', class: 'btn btn-danger', role: 'button' %></td>
    <% end %>
  </tbody>
</table>
<%= f.add_nested_fields_link :recipe_procedures, '追加', class: 'btn btn-primary', role: 'button' %>
